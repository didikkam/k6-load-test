{
  "name": "express-rest-api",
  "version": "1.0.0",
  "description": "REST API dengan Express.js dan MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run clean && npm run copy-files && npm run install-prod",
    "clean": "rm -rf dist",
    "copy-files": "mkdir -p dist && cp -r config models server.js package.json dist/",
    "install-prod": "cd dist && npm ci --only=production",
    "build:docker": "docker build -t express-rest-api .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "stress-test": "k6 run k6-tests/rps-stress-test.js"
  },
  "keywords": [
    "express",
    "mysql",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "mysql2": "^3.14.2",
    "sequelize": "^6.35.2",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
